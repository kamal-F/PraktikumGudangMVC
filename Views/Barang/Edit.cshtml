@model GudangWebApp.Models.Barang

@{
    ViewData["Title"] = "Edit Barang";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="KodeBarang"></label>
        <input asp-for="KodeBarang" class="form-control" />
        <span asp-validation-for="KodeBarang" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NamaBarang"></label>
        <input asp-for="NamaBarang" class="form-control" />
        <span asp-validation-for="NamaBarang" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="JumlahStok"></label>
        <input asp-for="JumlahStok" class="form-control" type="number" />
        <span asp-validation-for="JumlahStok" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Kategori"></label>
        <input asp-for="Kategori" class="form-control" />
        <span asp-validation-for="Kategori" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Simpan Perubahan</button>
    <a asp-action="Index" class="btn btn-secondary">Batal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
